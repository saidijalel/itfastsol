{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}
    
<div class="panel panel-default top-buffer">
    <div class="panel-heading">{{ 'Purchase'|trans }}</div>
    <div class="panel-body">

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ purchase.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ purchase.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ purchase.description }}</td>
                </tr>
                <tr>
                    <th>Start_date</th>
                    <td>{% if purchase.startdate %}{{ purchase.startdate|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>End_date</th>
                    <td>{% if purchase.enddate %}{{ purchase.enddate|date('Y-m-d') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('purchase_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('purchase_edit', { 'id': purchase.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>

    </div>
</div>

{% endblock %}
