{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if post.createdat %}{{ post.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{% if post.updatedat %}{{ post.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ post.body }}</td>
            </tr>
        </tbody>
    </table>

    <p><a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-link">Edit</a></p>

    <p>    {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
    </p>

    <p><a href="{{ path('post_index') }}" class="btn btn-link"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to the list</a></p>


{% endblock %}
