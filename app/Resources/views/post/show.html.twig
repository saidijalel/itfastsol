{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}

    <div class="panel panel-default top-buffer">
        <div class="panel-heading">{{ 'Post'|trans }}</div>
        <div class="panel-body">

            <table class="table table-striped table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ post.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'Title'|trans }}</th>
                    <td>{{ post.title }}</td>
                </tr>
                <tr>
                    <th>{{ 'Created at'|trans }}</th>
                    <td>{% if post.createdat %}{{ post.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>{{ 'Updated at'|trans }}</th>
                    <td>{% if post.updatedat %}{{ post.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>{{ 'Body'|trans }}</th>
                    <td>{{ post.body }}</td>
                </tr>
                </tbody>
            </table>

            <p><a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-warning btn-raised">Edit</a></p>

            <p>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger btn-raised">
                {{ form_end(delete_form) }}
            </p>

            <p><a href="{{ path('post_index') }}" class="btn btn-link btn-raised"><i class="fa fa-chevron-left" aria-hidden="true"></i> {{ 'Back to the list'|trans }}</a></p>

        </div>
    </div>





{% endblock %}
