{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}
    <h1>Post list</h1>

    <p><a href="{{ path('post_new') }}" class="btn btn-link"><i class="fa fa-plus-square" aria-hidden="true"></i> Create a new entry</a></p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Body</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{% if post.createdat %}{{ post.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if post.updatedat %}{{ post.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ post.body }}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
