{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}

    <div class="panel panel-default top-buffer">
        <div class="panel-heading">{{ 'Post list'|trans }}</div>
        <div class="panel-body">

            <p><a href="{{ path('post_new') }}" class="btn btn-link btn-raised"><i class="fa fa-plus-square" aria-hidden="true"></i> {{ 'Create a new entry'|trans }}</a></p>

            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>{{ 'Title'|trans }}</th>
                    <th>{{ 'Created at'|trans }}</th>
                    <th>{{ 'Updated at'|trans }}</th>
                    <th>{{ 'Body'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                        <td>{{ post.title }}</td>
                        <td>{% if post.createdat %}{{ post.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if post.updatedat %}{{ post.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ post.body }}</td>
                        <td>
                            <ul class="list-inline">
                                <li>
                                    <a href="{{ path('post_show', { 'id': post.id }) }}" class="btn btn-fab-mini btn-raised btn-info"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                </li>
                                <li>
                                    <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-fab-mini btn-raised btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}
