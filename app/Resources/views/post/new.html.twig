{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}

    <div class="panel panel-default top-buffer">
        <div class="panel-heading">{{ 'Post creation'|trans }}</div>
        <div class="panel-body">

                {{ form_start(form, { 'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group label-floating is-empty">
                    {{ form_label(form.title) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title   ) }}
                </div>
                <div class="form-group label-floating is-empty">
                    {{ form_label(form.body) }}
                    {{ form_errors(form.body) }}
                    {{ form_widget(form.body) }}
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                {{ form_end(form) }}

            <p><a href="{{ path('post_index') }}" class="btn btn-link btn-raised"><i class="fa fa-chevron-left" aria-hidden="true"></i> {{ 'Back to the list'|trans }}</a></p>

        </div>
    </div>

{% endblock %}