{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}

    <div class="panel panel-default top-buffer">
        <div class="panel-heading">Product list</div>
        <div class="panel-body">

            <div class="row">
                <div class="col-md-12">
                    <form action="{{ path('product_search') }}" method="post" role="search" class="form-inline">

                        <div class="form-group">
                            <label class="sr-only" for="search">Search</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></div>
                                <input type="text" name="search_term" class="form-control" id="search" placeholder="Search">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-warning">Search</button>
                    </form>
                </div>
            </div>

            <div class="clearfix"><br/></div>

            <div class="row table-responsive">
                <div class="col-md-12">
                    <table class="table table-striped table-bordered ">
                        <tr>
                            {# sorting of properties based on query components #}
                            <th>Image</th>
                            <th{% if pagination.isSorted('p.title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Title', 'p.title') }}</th>
                            <th{% if pagination.isSorted('p.description') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Description', 'p.description') }}</th>
                        </tr>

                        {# table body #}
                        {% for product in pagination %}
                            <tr {% if loop.index is odd %}class="color"{% endif %}>
                                <td> <img class="img-responsive" src="{{ asset('uploads') }}/{{ product.photo }}" alt="..." style="width: 200px"></td>
                                <td>{{ product.title }}</td>
                                <td>{% if product.description %}{{ product.description }}{% endif %}</td>
                            </tr>
                        {% endfor %}
                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    {# total items count #}
                    <span class="text-info text-right" role="alert">Total Products <span class="badge"> {{ pagination.getTotalItemCount }}</span></span>
                </div>
            </div>










        </div>
    </div>


{% endblock %}
