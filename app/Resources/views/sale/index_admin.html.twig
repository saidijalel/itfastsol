{% extends 'theme/theme1/layout.html.twig' %}

{% block body %}

    <div class="panel panel-default top-buffer">
        <div class="panel-heading">{{ 'Selling Leads'|trans }}</div>
        <div class="panel-body">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>{{ 'Photo'|trans }}</th>
                        <th>{{ 'Title'|trans }}</th>
                        <th>{{ 'Description'|trans }}</th>
                        <th>{{ 'Start date'|trans }}</th>
                        <th>{{ 'End date'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for sale in sales %}
                    <tr>
                        <td>{{ sale.photo }}</td>
                        <td>{{ sale.title }}</td>
                        <td>{{ sale.description }}</td>
                        <td>{% if sale.startDate %}{{ sale.startDate|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if sale.endDate %}{{ sale.endDate|date('Y-m-d') }}{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('sale_show', { 'id': sale.id }) }}">{{ 'show'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('sale_edit', { 'id': sale.id }) }}">{{ 'edit'|trans }}</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('sale_new') }}">{{ 'Create a new entry'|trans }}</a>
                </li>
            </ul>

         </div>

    </div>

{% endblock %}
